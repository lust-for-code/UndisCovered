<% include ../partials/header %>
<div class="container">
        <div class="row">
            <h1 style="text-align:center">Edit <%= uplace.name %> </h1>
            <div style="width: 30%; margin: 25px auto;">
                    <form action="/uplaces/<%= uplace._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" value="<%= uplace.name %>" name="uplace[name]" required>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" value="<%= uplace.place %>" name="uplace[place]" required>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" value="<%= uplace.image %>" name="uplace[image]" required>
                        </div>
                        <div class="form-group">
                                <input class="form-control" type="text" value="<%= uplace.desc %>" name="uplace[desc]" required>
                            </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-info btn-block">Update !</button>
                        </div>
                        
                    </form> 
                    <a href="/uplaces/<%= uplace._id %>">GO BACK</a>
            </div>
             
        </div>
        
    
       

</div>
    

<% include ../partials/footer %>