<% include ../partials/header %>
<div class="container">
        <div class="row">
            <h1 style="text-align:center">Add a new UndisCovered place</h1>
            <div style="width: 30%; margin: 25px auto;">
                    <form action="/uplaces" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" placeholder="Name" name="name" required>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" placeholder="Place" name="place" required>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" placeholder="Image url" name="image" required>
                        </div>
                        <div class="form-group">
                                <input class="form-control" type="text" placeholder="Description" name="description" required>
                            </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-info btn-block">Submit !</button>
                        </div>
                        
                    </form> 
                    <a href="/uplaces">GO BACK</a>
            </div>
             
        </div>
        
    
       

</div>
    

