
<% include ../partials/header %> 
    
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit Profile</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/user/<%= user._id %>?_method=PUT" method="POST">
                <div class="form-group">
                        <input class="form-control" type="text" name="user[fname]" value="<%=user.fname%>" placeholder="First Name" required>
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" name="user[lname]" value="<%=user.lname%>" placeholder="Last Name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[phone]" value="<%=user.phone%>" placeholder="Phone">
                </div>
                <div class="form-group">
                        <input class="form-control" type="email" name="user[email]" value="<%=user.email%>" placeholder="Email">
                </div>
                <div class="form-group">
                    <input class="form-control" type="date" name="user[dob]" value="<%=user.dob%>" placeholder="DD/MM/YY" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[place]" value="<%=user.place%>" placeholder="Place">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[dp]" value="<%=user.dp%>" placeholder="Uplaod a display picture" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Update</button>
                </div>
            </form>
            <p><a href="/user/<%=user._id%>">Back</a></p> 
        </div>
    </div>
</div>
<% include ../partials/footer %>