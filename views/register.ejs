
<% include partials/header %> 
    
    <div class="container">
        <div class="row">
            <h1 style="text-align:center">Signup to UndisCovered</h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/register" method="POST">
                    <div class="form-group">
                            <input class="form-control" type="text" name="fname" placeholder="First Name" required>
                    </div>
                    <div class="form-group">
                            <input class="form-control" type="text" name="lname" placeholder="Last Name" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="username" placeholder="Username" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="phone" placeholder="Phone">
                    </div>
                    <div class="form-group">
                            <input class="form-control" type="email" name="email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="date" name="dob" placeholder="DD/MM/YY" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="place" placeholder="Place">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="dp" placeholder="Uplaod a display picture" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" name="password" placeholder="Password" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-info btn-block">Sign Up</button>
                    </div>
                </form>
                <p>Already have an account ? <a href="/login %>">LOGIN</a></p> 
            </div>
        </div>
    </div>
<% include partials/footer %>