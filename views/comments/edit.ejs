<% include ../partials/header %>
<div class="container">
        <div class="row">
            <h1 style="text-align:center">Edit Comment</h1>
            <div style="width: 30%; margin: 25px auto;">
                    <form action="/uplaces/<%= uplace_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-info btn-block">Update</button>
                        </div>
                        
                    </form> 
                    <a href="/uplaces/<%= uplace_id %>">GO BACK</a>
            </div>
             
        </div>
        
    
       

</div>
    

