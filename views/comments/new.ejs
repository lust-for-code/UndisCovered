<% include ../partials/header %>
<div class="container">
        <div class="row">
            <h1 style="text-align:center">Add new comment to <%= uplace.name %> </h1>
            <div style="width: 30%; margin: 25px auto;">
                    <form action="/uplaces/<%= uplace._id %>/comments" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" placeholder="Comment" name="comment[text]" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-info btn-block">Submit !</button>
                        </div>
                        
                    </form> 
                    <a href="/uplaces/<%= uplace._id %>">GO BACK</a>
            </div>
             
        </div>
        
    
       

</div>
    

<% include ../partials/footer %>